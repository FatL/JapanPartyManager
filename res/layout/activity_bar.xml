<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BarActivity" >

    <LinearLayout
        android:id="@+id/LinearLayoutGlobal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_weight="0.09"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/imageButtonSodasJus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo_canette_ok" />

                    <TextView
                        android:id="@+id/labelSodasJus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sodas/Jus"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/imageButtonBubbleTea"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="center"
                        android:src="@drawable/bubbletea" />

                    <TextView
                        android:id="@+id/labelBubbleTea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bubble Tea"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/imageButtonCafeThe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/cafe" />

                    <TextView
                        android:id="@+id/labelCafeThe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Café/Thé"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/imageButtonConfiserie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mars" />

                    <TextView
                        android:id="@+id/labelConfiserie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confiserie"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.24" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.39" >

                <TableRow
                    android:id="@+id/tableRowEnTete"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/textViewCommande"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMMANDE"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowCanettes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalSodasJus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sodas/Jus"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalSodasJus"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" 
						android:editable="false"
						android:cursorVisible="false">
                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/labelFoisPrixSodasJus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="x 1€"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprSodasJus"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowBouteilles"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalCafeThe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Café/Thé"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalCafeThe"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:editable="false"
						android:cursorVisible="false" />

                    <TextView
                        android:id="@+id/labelFoisPrixCafeThe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="x 1€"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprCafeThe"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowEau"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalEau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confiserie"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalConfiserie"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" 
                        android:editable="false"
						android:cursorVisible="false"/>

                    <TextView
                        android:id="@+id/labelFoisPrixConfiserie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="x 1€"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprConfiserie"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalBubbleTea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bubble Tea"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalBubbleTea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/labelFoisPrixBubbleTea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="x 2.50€"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprBubbleTea"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.10" >

                    <TextView
                        android:id="@+id/labelTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Total"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <EditText
                        android:id="@+id/editTextTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:inputType="number"
                        android:editable="false"
						android:cursorVisible="false" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="€"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowCommanderAnnuler"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" >

                    <Button
                        android:id="@+id/buttonValiderCommande"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.2"
                        android:text="Valider Commande" />

                    <Button
                        android:id="@+id/buttonAnnulerCommande"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_weight="0.3"
                        android:text="Annuler" />

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>