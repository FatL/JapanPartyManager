<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BarActivity" >

    <LinearLayout
        android:id="@+id/LinearLayoutGlobal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                    	android:id="@+id/imageButtonBilletPayantSamedi"
                    	android:layout_width="match_parent"
                    	android:layout_height="100dp"
                    	android:scaleType="centerCrop"
                    	android:src="@drawable/billet_payant" />

                    <TextView
                        android:id="@+id/labelBilletPayantSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billet Payant Samedi"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                    	android:id="@+id/imageButtonBilletGratuitSamedi"
                    	android:layout_width="match_parent"
                    	android:layout_height="100dp"
                    	android:scaleType="centerCrop"
                    	android:src="@drawable/billet_gratuit" />

                    <TextView
                        android:id="@+id/labelBilletGratuitSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billet Gratuit Samedi"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                    	android:id="@+id/imageButtonTombolaSamedi"
                    	android:layout_width="match_parent"
                    	android:layout_height="100dp"
                    	android:scaleType="centerCrop"
                    	android:src="@drawable/ticket_tombola" />

                    <TextView
                        android:id="@+id/labelTombola"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Tombola"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                    	android:id="@+id/imageButtonPosterSamedi"
                    	android:layout_width="match_parent"
                    	android:layout_height="100dp"
                    	android:scaleType="centerCrop"
                    	android:src="@drawable/poster" />

                    <TextView
                        android:id="@+id/labelPoster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poster"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                    	android:id="@+id/imageButtonTicketBoissonSamedi"
                    	android:layout_width="match_parent"
                    	android:layout_height="100dp"
                    	android:adjustViewBounds="false"
                    	android:scaleType="centerCrop"
                    	android:src="@drawable/ticket_boisson" />

                    <TextView
                        android:id="@+id/labelTicketVert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Boisson" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                    	android:id="@+id/imageButtonTicketRepasSamedi"
                    	android:layout_width="match_parent"
                    	android:layout_height="100dp"
                    	android:scaleType="centerCrop"
                    	android:src="@drawable/ticket_repas" />

                    <TextView
                        android:id="@+id/labelTicketViolet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Repas" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TableRow
                    android:id="@+id/tableRowBilletPayantSamedi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalBilletPayantSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billet Payant"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalBilletPayantSamedi"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
						android:editable="false"
						android:cursorVisible="false">
                        <requestFocus />
                    </EditText>

                    <TextView
                        android:id="@+id/labelFoisPrixBilletPayantSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="x 1â‚¬"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprBilletPayantSamedi"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowBilletGratuitSamedi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalBilletGratuitSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billet Gratuit"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalBilletGratuitSamedi"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:editable="false"
						android:cursorVisible="false" />

                    <TextView
                        android:id="@+id/labelFoisPrixBilletGratuitSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="x 1â‚¬"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprBilletGratuitSamedi"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowTombola"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalTombola"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tombola"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalTombolaDimanche"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:editable="false" />

                    <TextView
                        android:id="@+id/labelFoisPrixTombolaDimanche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="x 1â‚¬"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprTombolaDimanche"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/labelTotalPoster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poster"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalPosterDimanche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
    					android:editable="false"
						android:cursorVisible="false" />

                    <TextView
                        android:id="@+id/labelFoisPrixPosterDimanche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="x 2.50â‚¬"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprPosterDimanche"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />

                </TableRow>

                <TableRow
                    android:id="@+id/TableRowTicketBoisson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Boisson"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalTicketBoissonSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
    					android:editable="false"
						android:cursorVisible="false"  />

                    <TextView
                        android:id="@+id/labelFoisPrixTicketBoissonSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="x 0.50â‚¬"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprTicketBoissonSamedi"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRowTicketRepas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Repas"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/editTextTotalTicketRepasSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
    					android:editable="false"
						android:cursorVisible="false" />

                    <TextView
                        android:id="@+id/labelFoisPrixTicketRepasSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="x 6.50â‚¬"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <Button
                        android:id="@+id/buttonSupprTicketRepasSamedi"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Suppr" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.10" >

                    <TextView
                        android:id="@+id/labelTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Total"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editTextTotalSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:editable="false"
						android:cursorVisible="false" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="â‚¬"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRowCommanderAnnuler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" >

                    <Button
                        android:id="@+id/buttonValiderCommandeSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.2"
                        android:text="Valider Commande" />

                    <Button
                        android:id="@+id/buttonAnnulerCommandeSamedi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.3"
                        android:text="Annuler" />

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>