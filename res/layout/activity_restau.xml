<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BarActivity" >

    <LinearLayout
    	android:id="@+id/LinearLayoutGlobal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_alignParentBottom="true"
    	android:layout_centerHorizontal="true"
    	android:orientation="horizontal" >

    	<LinearLayout
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:layout_weight="0.50"
    		android:orientation="vertical" >

    		<LinearLayout
    			android:layout_width="match_parent"
    			android:layout_height="157dp"
    			android:layout_weight="0.09"
    			android:orientation="horizontal" >

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonMenu"
    					android:layout_width="match_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="20dp"
    					android:layout_weight="2.00"
    					android:scaleType="centerCrop"
    					android:src="@drawable/menu" />

    				<TextView
    					android:id="@+id/textViewMenu"
    					android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					android:layout_weight="1.02"
    					android:text="Menu"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_marginRight="0dp"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonCrepe"
    					android:layout_width="match_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="20dp"
    					android:scaleType="center"
    					android:src="@drawable/crepes" />

    				<TextView
    					android:id="@+id/labelCrepe"
    					android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					android:text="Crêpe"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonPlat"
    					android:layout_width="match_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="20dp"
    					android:scaleType="centerCrop"
    					android:src="@drawable/sandwich" />

    				<TextView
    					android:id="@+id/textViewPlat"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Plat"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>
    		</LinearLayout>

    		<LinearLayout
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginBottom="10dp"
    			android:layout_marginTop="10dp"
    			android:layout_weight="0.33" >

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonSoda"
    					android:layout_width="match_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="20dp"
    					android:src="@drawable/logo_canette_ok" />

    				<TextView
    					android:id="@+id/labelSoda"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Soda"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonCafeThe"
    					android:layout_width="fill_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="20dp"
    					android:src="@drawable/cafe" />

    				<TextView
    					android:id="@+id/textViewCafeThe"
    					android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					android:text="Café/Thé"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonConfiserie"
    					android:layout_width="match_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="20dp"
    					android:src="@drawable/confiserie" />

    				<TextView
    					android:id="@+id/textViewConfiserie"
    					android:layout_width="130dp"
    					android:layout_height="wrap_content"
    					android:text="Confiserie"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>
    		</LinearLayout>

    		<LinearLayout
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_weight="0.33" >

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >

    				<ImageButton
    					android:id="@+id/imageButtonEau"
    					android:layout_width="match_parent"
    					android:layout_height="110dp"
    					android:layout_marginRight="10dp"
    					android:src="@drawable/logo_bouteille_eau" />

    				<TextView
    					android:id="@+id/labelEau"
    					android:layout_width="146dp"
    					android:layout_height="wrap_content"
    					android:text="Eau"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</LinearLayout>

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >
    			</LinearLayout>

    			<LinearLayout
    				android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.33"
    				android:orientation="vertical" >
    			</LinearLayout>
    		</LinearLayout>
    	</LinearLayout>

    	<LinearLayout
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="50dp" >

    		<TableLayout
    			android:layout_width="wrap_content"
    			android:layout_height="match_parent"
    			android:gravity="right" >

    			<TableRow
    				android:id="@+id/tableRowEnTete"
    				android:layout_width="fill_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/textViewCommande"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="COMMANDE"
    					android:textAppearance="?android:attr/textAppearanceLarge" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowMenu"
    				android:layout_width="wrap_content"
    				android:layout_height="match_parent"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalMenu"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Menu"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalMenu"
    					android:layout_width="80dp"
    					android:layout_height="wrap_content"
    					android:cursorVisible="false"
    					android:editable="false"
    					android:inputType="number" >

    					<requestFocus />
    				</EditText>

    				<TextView
    					android:id="@+id/labelFoisPrixMenu"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:layout_marginRight="10dp"
    					android:text="x 1€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprMenu"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowCrepe"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalCrepe"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Crêpe"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalCrepe"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/labelFoisPrixCrepe"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="x 2.50€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprCrepe"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowPlat"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalPlat"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Plat"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalPlat"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/labelFoisPrixPlat"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="x 2.50€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprPlat"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowSoda"
    				android:layout_width="wrap_content"
    				android:layout_height="match_parent"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalSoda"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Soda"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalSoda"
    					android:layout_width="80dp"
    					android:layout_height="wrap_content"
    					android:cursorVisible="false"
    					android:editable="false"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/labelFoisPrixSoda"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:layout_marginRight="10dp"
    					android:text="x 1€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprSoda"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowCafeThe"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalCafeThe"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Café/Thé"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalCafeThe"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/labelFoisPrixCafeThe"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="x 2.50€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprCafeThe"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowConfiserie"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalConfiserie"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Confiserie"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalConfiserie"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/labelFoisPrixConfiserie"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="x 2.50€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprConfiserie"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowEau"
    				android:layout_width="wrap_content"
    				android:layout_height="match_parent"
    				android:layout_weight="0.05" >

    				<TextView
    					android:id="@+id/labelTotalEau"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text="Eau"
    					android:textAppearance="?android:attr/textAppearanceMedium" />

    				<EditText
    					android:id="@+id/editTextTotalEau"
    					android:layout_width="80dp"
    					android:layout_height="wrap_content"
    					android:cursorVisible="false"
    					android:editable="false"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/labelFoisPrixEau"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:layout_marginRight="10dp"
    					android:text="x 1€"
    					android:textAppearance="?android:attr/textAppearanceSmall" />

    				<Button
    					android:id="@+id/buttonSupprEau"
    					style="?android:attr/buttonStyleSmall"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_marginLeft="10dp"
    					android:text="Suppr" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowTotal"
    				android:layout_width="wrap_content"
    				android:layout_height="match_parent"
    				android:layout_weight="0.10" >

    				<TextView
    					android:id="@+id/labelTotal"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_gravity="bottom"
    					android:text="Total"
    					android:textAppearance="?android:attr/textAppearanceLarge" />

    				<EditText
    					android:id="@+id/editTextTotal"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_gravity="bottom"
    					android:cursorVisible="false"
    					android:editable="false"
    					android:inputType="number" />

    				<TextView
    					android:id="@+id/textView1"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:layout_gravity="bottom"
    					android:text="€"
    					android:textAppearance="?android:attr/textAppearanceMedium" />
    			</TableRow>

    			<TableRow
    				android:id="@+id/tableRowCommanderAnnuler"
    				android:layout_width="wrap_content"
    				android:layout_height="match_parent"
    				android:layout_weight="0.15" >

    				<Button
    					android:id="@+id/buttonValiderCommande"
    					android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					android:layout_gravity="bottom"
    					android:layout_weight="0.2"
    					android:text="Valider Commande" />

    				<Button
    					android:id="@+id/buttonAnnulerCommande"
    					android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					android:layout_gravity="bottom|right"
    					android:layout_weight="0.2"
    					android:text="Annuler" />
    			</TableRow>
    		</TableLayout>
    	</LinearLayout>
    </LinearLayout>

</RelativeLayout>